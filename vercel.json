{
  "version": 2,
  "buildCommand": "nx run ghost:build",
  "framework": "ghost",
  "builds": [
    {
      "src": "ghost/core/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "ghost/core/index.js"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "database__client": "sqlite3",
    "url": "https://${VERCEL_URL}"
  },
  "ignoreCommand": "git diff --quiet HEAD^ HEAD ./",
  "installCommand": "yarn install"
}
